<body>
    <div class="main">
        <div class="main-left">
            <div class="main-videos">
                <div class="whiteboard-wrapper" id="whiteboard-wrapper">
                    
                </div>
                <div id="Dish">

                </div>
            </div>
            <div class="main-controls">
                <div class="main-controls-block">
                    <%= roomId %>
                        <span style="font-size: 1.2rem; margin-bottom: 12px;" class="material-icons copy"
                            onclick="copyToClipboard('<%= roomId %>')">content_copy</span>
                </div>
                <div class="main-controls-block">
                    <div onclick="muteUnmute()" class="main-controls-button main-mute_button">
                        <span class="material-icons mic">mic</span>
                    </div>
                    <div onclick="playStop()" class="main-controls-button main-video_button">
                        <span class="material-icons videocam">videocam</span>
                    </div>
                    <div onclick="shareUnshare()" class="main-controls-button">
                        <span class="material-icons shareUnshare">screen_share</span>
                    </div>
                    <div onclick="endCall()" class="main-controls-button" style="background-color: red;">
                        <span class="material-icons">call_end</span>
                    </div>
                </div>
                <div class="main-controls-block">
                    <div class="main-controls-button">
                        <span class="material-icons">people</span>
                    </div>
                    <div onclick="toggleChat()" class="main-controls-button">
                        <span class="material-icons">chat</span>
                    </div>
                    <div onclick="toggleWhiteboard()" class="main-controls-button">
                        <span class="material-icons">note_alt</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="chat">
            <div class="main-header">
                <h6>Chat</h6>
            </div>
            <div class="main-chat_window">
                <div class="messages">
                    <div class="message my-message">
                        Sample self message box
                    </div>

                    <div class="message other-message">
                        <span style="font-size: 0.7rem; color: rgb(0, 0, 0, 0.4)">Ratan</span><br>
                        Sample remote message box
                    </div>

                </div>

            </div>
            <div class="main-message_container">
                <input id="chat_message" type="text" placeholder="Type message here...">
            </div>
        </div>
    </div>
</body>

<script>
    var whiteBoard = new DrawingBoard.Board('whiteboard-wrapper', {
        controls: [
            'Color',
            { Size: { type: "range" } },
            'DrawingMode',
            'Navigation',
        ]
    });



</script>

