<body>
    <div class="main">
        <div class="main__left">
                <!--<i class="fa-solid fa-record-vinyl"></i> -->
            <div class="main__videos">
                <div id="Dish">

                </div>
            </div>
            <div class="main__controls">
                <div class="main__controls__block">
                    <%= roomId %>
                </div>
                <div class="main__controls__block">
                    <div onclick="muteUnmute()" class="main__controls__button main__mute_button">
                        <i class="fas fa-microphone"></i>
                    </div>
                    <div onclick="playStop()" class="main__controls__button main__video_button">
                        <i class="fas fa-video"></i>
                    </div>
                    <div onclick="shareUnshare()" class="main__controls__button">
                        <i class="fa-solid fa-screencast"></i>
                    </div>
                    <div class="main__controls__button" style="background-color: red;">
                        <i class="fas fa-phone"></i>
                    </div>
                </div>
                <div class="main__controls__block">
                    <div class="main__controls__button">
                        <i class="fas fa-user-friends"></i>
                    </div>
                    <div onclick="toggleChat()" class="main__controls__button">
                        <i class="fas fa-comment-alt"></i>
                    </div>
                    <div onclick="toggleBoard()" class="main__controls__button">
                        <i class="fas fa-comment-alt"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="chat">
            <div class="main__header">
                <h6>Chat</h6>
            </div>
            <div class="main__chat_window">
                <div class="messages">
                    <div class="message my-message">
                        Sample self message box
                    </div>

                    <div class="message other-message">
                        <span style="font-size: 0.7rem; color: rgb(0, 0, 0, 0.4)">Ratan</span><br>
                        Sample remote message box
                    </div>

                </div>

            </div>
            <div class="main__message_container">
                <input id="chat_message" type="text" placeholder="Type message here...">
            </div>
        </div>
    </div>
